page button {
	margin: 0;
    padding: 0;
    text-align: left;
	box-sizing: initial;
	overflow: initial;
	background: inherit;
	line-height : normal;
	border-radius: inherit;
	font-size: 0;
}
.flex-panel{
    display: flex;
    flex-direction: column;
    min-height: 100%;
}
.card-panel{
    width: 690rpx;
    height: 200rpx;
    display: block;
    margin: 0 auto;
}
.panel{
    display: flex;
    align-items: center;
    width: 690rpx;
    height: 200rpx;
    box-shadow:0px 10rpx 20rpx 0rpx rgba(0,0,0,0.1);
    border-radius:8rpx;
    background:rgba(255,255,255,1);
    margin: 0 auto;
}
.left{
    width: 200rpx;
    height: 100%;
}
.right{
    flex: 1;
    height: 160rpx;
    margin: 20rpx 0;
}
.left>image{
    display: block;
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx auto;
    border-radius:8px;
    overflow: hidden;
}
.title{
    width: calc(100% - 74rpx);
    height:44rpx;
    font-size:32rpx;
    font-family:PingFangSC;
    font-weight:600;
    color:rgba(51,51,51,1);
    line-height:44rpx;
}
.desc{
    width: calc(100% - 74rpx);
    height:72rpx;
    font-size:26rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:36rpx;
}
.evaluate-panel{
    width: calc(100% - 20rpx);
    display: flex;
    align-items: center;
}
.star-panel,.count{
    flex: 1;
    display: flex;
    height: 20rpx;
    height:40rpx;
    font-size:28rpx;
    text-align: right;
    align-items: center;
    font-family:PingFangSC-Medium;
    font-weight:600;
    color:rgba(255,90,90,1);
    line-height:40rpx;
}
.count{
    flex: none;
}
.count>view{
    color:#999999;
    font-weight:100;
}
.star{
    width: 22rpx;
    height: 20rpx;
    background: #FFBF00;
    clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
}

.flex-margin{
    flex: 1;
}
/* 更多好玩描述 */
.banner-panel{
    margin-top: 20rpx;
    height:192rpx;
}
.banner{
    display: block;
    margin: 0 auto;
    width:430rpx;
    height:80rpx;
    border-radius:16rpx;
    font-size:36rpx;
    font-family:PingFangSC-Medium;
    font-weight:600;
    text-align: center;
    color:rgba(255,255,255,1);
    line-height:80rpx;
    border:2rpx solid rgba(255,255,255,.5);
}
.more-text{
    width:312rpx;
    height:34rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(229,217,255,1);
    line-height:34rpx;
    margin: 20rpx auto;
}