scroll-view{
    width: 100%;
    height: 100%;
    background: #fff;
}
.top_bac{
    width: 100%;
    height: 110rpx;
}
.sign{
    height: 400rpx;
    padding: 0 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.sign_img{
    width: 280rpx;
    height: 400rpx;
}
.love{
    width: 82rpx;
    height: 74rpx;

}
.board{
    width: 100%;
    height: 500rpx; 
    margin-top: 70rpx;
    position: relative;
}
.board_img{
    height: 500rpx;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}
.board_head{
    width: 100%;
    height:88rpx;
    font-size:36rpx;
    font-weight: bold;
    color:rgba(170,81,12,1);
    line-height:88rpx;
    text-align: center;
    position: absolute;
    top: 40rpx;
    z-index: 10;
}
.board_content{
    width: 650rpx;
    height: 260rpx;
    position: absolute;
    top: 160rpx;
    left: 50rpx;
    z-index: 10;
    /* background: #fff; */
}
.board_txt{
    width: 280rpx;
    box-sizing: border-box;
    margin-top: 58rpx;
    margin-left: 40rpx;
    height:48rpx;
    font-size:34rpx;
    color:rgba(170,81,12,1);
    line-height:48rpx;
    float: left;
}
.love_advice{
    margin-top: 40rpx;
    padding: 0 30rpx;
}
.la_header{
    width:140rpx;
    height:52rpx;
    line-height: 52rpx;
    background:rgba(146,98,251,.2);
    border-radius:8rpx;
    font-size:28rpx;
    text-align: center;
    color:rgba(146,98,251,1);
    margin-bottom: 18rpx;
}
.la_content{
    font-size:32rpx;
    color:rgba(102,102,102,1);
    line-height:52rpx;
}
.important{
    color:rgba(255,77,77,1) !important;
    background:rgba(255,77,77,.2) !important;
}
.find{
    width: 100%;
    height:100rpx;
    background:linear-gradient(-90deg,rgba(174,69,255,1),rgba(146,98,251,1));
    font-size:36rpx;
    color:rgba(255,255,255,1);
    border-radius: 0;
    line-height:100rpx;
    text-align: center;
    font-weight: bold;
    position: fixed;
    bottom: 0;
    left: 0;
}
.footer{
    height: 300rpx;
}