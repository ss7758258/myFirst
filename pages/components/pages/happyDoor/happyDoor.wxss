page{
    background: #FFF;
}
image{
    width: 100%;
}
.navigtion_panel{
    background: #FF4053;
}
.mb40{
    margin-bottom: 40rpx !important;
}
navigator{
    width: 100%;
    height: 100%;
}
/* 头部 */
.door-top{
    width: 100%;
    height: 560rpx;
}
.door-top>image{
    width: 100%;
    height: 100%;
}
/* 中间内容 */
.door-center{
    margin-top: 26rpx;
    color: #fff;
}
.door-text{
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
}
.door-title{
    text-align: center;
    height:50rpx;
    font-size:36rpx;
    font-family:PingFangSC-Medium;
    color:rgba(0,0,0,1);
    line-height:50rpx;
}
.door-text>view{
    width: 74rpx;
    height: 74rpx;
    border: 3rpx solid #FF4053;
    border-radius: 5rpx;
    margin: 10rpx 30rpx;
    font-size:48rpx;
    text-align: center;
    font-family:PingFangSC-Medium;
    color:rgba(0,0,0,1);
    line-height:74rpx;
    box-shadow: 0 4rpx 8rpx 0 rgba(255, 83, 105, 0.3);
}
.door-input{
    width: 100%;
    height: 1rpx;
    min-height:1rpx;
    max-height: 1rpx;
}
.door-btn>navigator,.door-btn>view{
	margin : 0 auto;
    font-size: initial;
    text-align: center;
	line-height: 100rpx;
	border-radius: 10rpx;
	color: #fff;
	transition: all .1s linear;
}
.door-btn image{
    width: 200rpx;
    height: 200rpx;
}
.animate{
	opacity: .85;
	transform: scale(.9);
}

/* 底部 */
.current .door-bottom{
    margin-top: 0;
}
.current .door-title{
    margin-top: 60rpx !important;
    margin-bottom: 80rpx !important;
}
.door-bottom{
    flex: 1;
    margin-top: 120rpx;
}
.door-secret{
    width: 690rpx;
    margin: 0 auto;
    text-align: center;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.door-secret>view{
    width: 223rpx;
    border-bottom: 2rpx dashed #979797;
}
.door-secret>view.secret{
    width: 248rpx;
    height: 44rpx;
    font-size:32rpx;
    font-family:PingFangSC-Regular;
    color:rgba(102,102,102,1);
    line-height:44rpx;
    border-bottom: none;
}

.door-gz{
    width:690rpx;
    height:140rpx;
    margin: 0 auto;
    text-align: center;
    background: #FAF8FF;
}
.door-gz-panel{
    text-align: center;
    font-size:32rpx;
    padding-top: 24rpx;
    font-family:PingFangSC-Regular;
    color:rgba(51,51,51,1);
    line-height:44rpx;
}
.door-gz-panel>text{
    display: block;
}
.blod{
    font-weight: 600;
}