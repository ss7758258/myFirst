@import "/template/tabbar/tabbar.wxss";

scroll-view{
	background: #fff;
}
image{
	display: block;
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0;
}
button{
	/* position: static; */
	margin: 0;
	padding: 0;
}

/* 卡片样式 */

.panel{
	position: relative;
}
.star-card{
	width:710rpx;
	height:280rpx;
	background:linear-gradient(-180deg,rgba(255,187,123,1),rgba(255,144,79,1));
	box-shadow:0 8rpx 16rpx 0 rgba(255,114,69,0.4);
	border-radius:12rpx;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-radius: 12rpx;
}
.pair{
	background:linear-gradient(180deg,rgba(255,176,176,1),rgba(255,116,116,1));
	box-shadow:0 8rpx 16rpx 0 rgba(255,108,108,0.4);
}

.star-card-img{
	width: 100%;
	height: 100%;
}
.star-icon-panel{
	position: relative;
	width: 260rpx;
	height: 100%;
	border-radius: 12rpx;
	overflow: hidden;
}
.star-icon{
	position: absolute;
	width: 260rpx;
	height: 100%;
	top: 0;
	bottom: 0;
	left: 20rpx;
	right: 0;
	margin: auto;
	border-radius: 12rpx;
}
.icon-1{
	width: 182rpx;
	height: 180rpx;
}
.icon-2{
	width: 181rpx;
	height: 162rpx;
}

.star-text-panel{
	flex: 1;
	font-size:32rpx;
	font-family:PingFangSC;
	color:rgba(255,255,255,1);
}
.star-text-panel>text{
	display: block;
	height: 44rpx;
	line-height: 44rpx;
	text-align: right;
	padding-right: 60rpx;
}
.star-text-panel>text:first-child{
	font-size:72rpx;
	font-weight: 600;
	height: 100rpx;
	line-height: 100rpx;
}
/* End卡片样式 */


/* 正方形卡片 */
.panel.rect{
	width:710rpx;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
}

.star-rect-card{
	width:340rpx;
	height:380rpx;
	background:linear-gradient(180deg,rgba(155,229,253,1),rgba(98,188,251,1));
	box-shadow:0 8rpx 16rpx 0 rgba(102,190,251,0.3);
	border-radius:12rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.card-2{
	background:linear-gradient(180deg,rgba(255,224,167,1),rgba(255,189,67,1));
	box-shadow:0 8rpx 16rpx 0 rgba(255,190,69,0.3);
}
.star-rect-panel{
	display: flex;
	justify-content: center;
	flex-direction: column;
	align-items: center;
}
.rect-icon{
	width:108rpx;
	height:108rpx;
}

.rect-text-panel{
	text-align: center;
}
.rect-text-panel>text{
	display: block;
	height:40rpx;
	font-size:32rpx;
	font-family:PingFangSC;
	color:rgba(255,255,255,1);
	line-height:40rpx;
}
.rect-text-panel>text:first-child{
	height:60rpx;
	font-size:48rpx;
	font-weight: 600;
	color:rgba(255,255,255,1);
	line-height:60rpx;
}
/* End正方形卡片 */

.star-text-time{
	position: absolute;
	top: 0;
	left: 0;
	min-width: 400rpx;
	height: 50rpx;
	font-size:30rpx;
	font-family:PingFangSC-Regular;
	color:rgba(255,255,255,1);
	display: flex;
	align-items: center;
	background: rgba(0,0,0,.7);
	border-radius: 0 25rpx 25rpx 0;
}
.star-num-icon{
	width: 38rpx;
	height: 38rpx;
	margin-left: 10rpx;
}

.star-num{
	text-indent: 10rpx;
}
.star-unclaimed{
	position: absolute;
	top: 0;
	left: 6rpx;
	width: 130rpx;
	height: 60rpx;
	font-size:28rpx;
	font-family:PingFangSC-Regular;
	color:rgba(255,255,255,1);
	line-height:40rpx;
	text-align: center;
}
.star-unclaimed image,.star-unclaimed>view{
	position: relative;
	width: 100%;
	height: 100%;
}
.star-unclaimed text{
	position: absolute;
	width: 100%;
	height: 40rpx;
	font-size:28rpx;
	line-height: 35rpx;
	bottom: 0;
	left: 0;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}


/* 对话框 */
.dialog-mask{
	position: fixed;
	width: 100%;
	height: 100%;
	background:rgba(0,0,0,.7);
}
.dialog-panel{
	position: fixed;
	width: 570rpx;
	height: 400rpx;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	background:rgba(255,255,255,1);
	border-radius:6rpx;
}
.dialog{
	position: relative;
	text-align: center;
}
.dialog-title{
	font-size:36rpx;
	font-family:PingFangSC;
	font-weight: 600;
	color:rgba(146,98,251,1);
	line-height:50rpx;
}
.dialog-content{
	padding: 0 44rpx;
	font-size:32rpx;
	font-family:PingFangSC;
	color:rgba(51,51,51,1);
	line-height:44rpx;
}
.dialog-btns{
	padding: 0 44rpx;
	display: flex;
	justify-content: space-between;
}
.dialog-btns>button{
	width: 210rpx;
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 40rpx;
	font-size:32rpx;
	font-family:PingFangSC;
	font-weight: 600;
	color:rgba(102,102,102,1);
	border:2rpx solid rgba(229,229,229,1);
}
.dialog-btns>button.dialog-sure{
	background: #9262FB;
	color: #fff;
}
/* End对话框 */