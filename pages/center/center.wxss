.panel{
    background: #FFFFFF;
    height: calc(100% - 64px);
}
.photo{
    height: 28.48575712143928vh;
    background: #9262FB;
    position: relative;
}
.photo > image{
    position: absolute;
    /* top: 0; */
    bottom: 10vh;
    left: 0;
    right: 0;
    margin: auto;
    width: 26.666666666666668vw;
    height: 26.666666666666668vw;
    border-radius: 50%;
    border: 1px solid #FFFFFF;
    overflow: hidden;
}
.text{
    display:block;
    position:absolute;
    left:0;
    right:0;
    margin:auto;
    text-align:center;
    bottom:5vh;
    font-size:4.8vw;
    color: #FFFFFF;
}
.flex{
    display: flex;
    box-shadow: inset 0 -1px 0 0 rgba(0,0,0,0.10);
}
.flex>view{
    flex: 1;
    height:8.995502248875562vh;
    line-height: 8.995502248875562vh;
    font-size: 4vw;
    color: #474747;
    font-family: 'PingFangSC-Regular'
}
.flex>view:nth-child(2){
    flex: 4;
}
.flex>view:first-child,.flex>view:last-child{
    position: relative;
}
.flex>view:first-child>image,.flex>view:last-child>image{
    margin:atuo;
    position:absolute;
    top:0;
    bottom:0;
    right:1.3vw;
    margin: auto;
}
.flex>view:last-child>image{
    left: 0;
    right: 0;
}
