.notice_icon{
    width: 9.066666666666666vw;
    height: 9.066666666666666vw;
}
.switchOn{
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 80%;
    height: 7.2vw;
    background:rgba(146, 98, 251, 1);
    border-radius:3.6vw;
    transition: all .3s linear;
}
.switchOn.off{
    background:rgba(146, 98, 251, .3);
}
.switchOn>view{
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 3.6vw;
    overflow: hidden;
}
.switchOn>view>view{
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    left: calc(100% - 7vw);
    width: 6.8vw;
    height: 6.8vw;
    background: #FFFFFF;
    border-radius:50%; 
    transition: all .2s ease-in-out;
    box-shadow:0 0 3px rgba(0,0,0,.1);
}
.switchOn.off>view>view{
    left: 0.2vw;
    right: auto;
}
.card_star{
    float: right;
    font-size:4.8vw;
    font-family:'PingFangSC-Medium';
    color:rgba(204,204,204,1);
    font-weight: 100;
