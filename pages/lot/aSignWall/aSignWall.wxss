page{
  background:rgba(146,98,251,1);
}
.emptyview{  
  width: 2rpx;  
  height: 100%;
  margin-left: 44rpx;
  background: rgba(255,255,255,.8);
  position: fixed;
  z-index: 1;
}
.scroll-view{
  width:750rpx;
  height: calc(100% - 2.9962546816479403vh - 6.6vh);
  z-index: 10;
  margin-top: 44rpx;
}
.box{ 
  padding: 0 30rpx;
  box-sizing: border-box;
}


/* 日期 */
.date{
  height: 30rpx;
  display: flex;
  flex-direction: row;
  /* margin-bottom: 20rpx; */
}
.day,.date_detail{
  height:30rpx;
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height:30rpx;
}
.day{
  width:30rpx;
  height:30rpx;
  background:rgba(255,222,46,1);
  border-radius: 50%;
  z-index:10;
}
.date_detail{
  margin-left:10rpx; 
}

/* 每日一签 */
.content{
  margin-left: 15rpx;
  padding:20rpx 0 44rpx 50rpx;
}
.open_lot1,.open_lot2{
  width:640rpx;
  height:120rpx;
} 
.open_lot1{
  padding: 0 30rpx;
  border:2rpx solid rgba(255,255,255,0.5);
  background:rgba(255,255,255,0.3);
  border-radius:12rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.open_lot_img{
  width: 120rpx;
  height: 80rpx;
  /* border: 1rpx dashed #ddd; */
}
.openlot_type{
    width: 176rpx;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.openlot_text{
    font-size:32rpx;
    color:rgba(255,255,255,1);
    line-height:44rpx;
}
.openlot_cry{
    width: 60rpx;
    height: 60rpx;
}


/* 没有数据时的样式 */
.box_empty{
  width: 500rpx;
  height: 500rpx;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 32rpx;
}
.box_empty_img{
  width: 406rpx;
  height: 316rpx;
}