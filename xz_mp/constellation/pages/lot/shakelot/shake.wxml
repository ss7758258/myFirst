<view class="UI_pgae">
  <view class="userInfo">
    <view class="photo">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="left">
      <view>
        <text>你好，</text>
        <open-data type="userNickName"></open-data>
      </view>
      <text>摇摇手机，立即抽取你的每日一签</text>
    </view>
  </view>
  <!--摇签-->
  <view class="drawLots">
    <view class="lotPot {{shakeLotSpeed? 'shake' : ''}}" bindtap="drawLots">

      <view class="box">
        <image class="pot" wx:if="{{potPath}}" src="/assets/images/pot_2.png" />
        <image class="pot" wx:else src="/assets/images/pot_1.png" />
        <image class="pot surround" src="{{imgs[3]}}" />
        <image class="lot" src="/assets/images/lot.png" />
        <image class="lot" src="/assets/images/lot.png" />
        <image class="lot" src="/assets/images/lot.png" />
        <image class="lot" src="/assets/images/lot.png" />
        <image class="lot" src="/assets/images/lot.png" />
        <image class="lot" src="/assets/images/lot.png" />
        <image class="lot" src="/assets/images/lot.png" />
      </view>
    </view>
    <form bindsubmit="showLotList" class='savepic' report-submit='true'>
      <button class="button1" form-type="submit" type='' hover-class="none">
        <view wx:if="{{!shakeLotSpeed}}" class="moreLot">
          <text>一签盒</text>
          <image src="/assets/images/arrow.png" />
        </view>
      </button>
    </form>
  </view>
</view>
<form bindsubmit="onclickHome" class='home' report-submit='true'>
  <button class='button1' form-type="submit" type='' hover-class="none">
    <image wx:if="{{isFromShare}}" src="/assets/images/icon_home.png" mode="widthFix" />
  </button>
</form>

<form bindsubmit="bindGetUserInfo" class='shouquan' report-submit='true' wx:if="{{!hasAuthorize}}">
  <button form-type="submit" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">
    授权该程序获取信息
  </button>
</form>