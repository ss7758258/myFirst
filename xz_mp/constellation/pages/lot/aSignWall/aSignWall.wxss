/* pages/aSignWall/aSignWall.wxss */
.scroll-view{
  width:750rpx;
  height:1039rpx; 
}
.box{ 
  padding: 0 30rpx;
  box-sizing: border-box;
  /* overflow: scroll */
}
.emptyview{  
  height: 40rpx;
  margin-left: 40rpx;
  border-left: 2rpx solid #fff;
}

/* 拆签样式 */
.date{
  height: 80rpx;
  display: flex;
  flex-direction: row;
}
.day,.date_detail{
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}
.day{
  border-radius: 50%;
  border: 2rpx solid #fff;
  text-align: center;
  font-weight: bold;
}
.date_detail{
  margin-left:10rpx; 
}
.content{
  margin-left: 40rpx;
  /* padding:0 0 20rpx 50rpx; */
  padding-left:50rpx;
  border-left: 2rpx solid #fff;
}
.open_lot1,.open_lot2{
  width:600rpx;
  height:120rpx;
} 
.open_lot1{
  padding: 0 30rpx;
  border:2rpx solid rgba(255,255,255,0.5);
  background:rgba(255,255,255,0.3);
  border-radius:12rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.open_lot_img{
  width: 106rpx;
  height: 66rpx;
  /* border: 1rpx dashed #ddd; */
}

/* 没有数据时的样式 */
.box_empty{
  width: 500rpx;
  height: 500rpx;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 32rpx;
}
.box_empty_img{
  width: 406rpx;
  height: 316rpx;
}