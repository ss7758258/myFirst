page {
	background: rgba(146, 98, 251, 1);
}

.panel_body {
	position: relative;
	height: 100%;
}
/* 头部签主人信息 */
.header_panel{
	height: 300rpx;
	text-align: center;
}
.header_panel>text {
	display: block;
	text-align: center;
	overflow: hidden;
}
.header_panel>image{
	display: inline-block;
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	box-shadow: 0 0 5px rgba(0,0,0,.1);
}
.lot_name {
	margin-top: 20rpx;
	height:45rpx;
	font-size:32rpx;
	font-family:'PingFangSC-Medium';
	color:rgba(255, 255, 255, 1);
	line-height:45rpx;
}
.lot_desc_text{
	margin-top: 10rpx;
	height:40rpx;
	font-size:28rpx;
	font-family:'PingFangSC-Regular';
	color:rgba(255, 255, 255, 1);
	line-height:40rpx;
}
/* End头部签主人信息 */

/* 签详情信息 */
.content_panel{
	position: relative;
	height: 420rpx;
}
.content_panel.not_dis{
	animation: Flicker 1.5s infinite ease-in-out;
}
@keyframes Flicker{
	0%,100%{
		box-shadow: 0 0 10px 5px rgba(255,255,255,.3);
		transform: scale(.97);
	}
	50% {
		box-shadow: 0 0 30px 15px rgba(255,255,255,.6);
		transform: scale(1);
	}
}
.content_panel image {
	width: 100%;
	height: 100%;
}
.envelope{
	width: 690rpx;
	height: 420rpx;
	margin: 0 auto;
}
.envelope_content{
	position: absolute;
	top: 0;
	text-align: center;
	width: 100%;
	height: 100%;
}
.envelope_content_panel{
	position: relative;
	width: 100%;
	height: 100%;
}

.content_panel .header_envelope {
	position: absolute;
	top: 0;
	transform-origin: center top;
	height: 281rpx;
	top: 0;
	left: 0;
	right: 0;
	margin: auto;
}
.content_panel .heart_big{
	position: absolute;
	width: 136rpx;
	height: 103rpx;
	top: 128rpx;
	left: 0;
	right: 0;
	margin: auto;
}
.content_panel .heart_small{
	position: absolute;
	width: 64rpx;
	height: 58rpx;
	bottom: 50rpx;
	left: 0;
	right: 0;
	margin: auto;
}
.envelope_content_lotName{
	position: absolute;
	display: block;
	text-align: center;
	height: 58rpx;
	font-size: 58rpx;
	font-family:'PingFangSC-Medium';
	top: 20rpx;
	left: 0;
	right: 0;
	margin: auto;
}
.no_dis_text{
	position: absolute;
	display: flex;
	text-align: center;
	font-size:28rpx;
	font-family:'PingFangSC-Regular';
	color:rgba(255, 255, 255, 1);
	line-height:40rpx;
	width: 152rpx;
	height: 40rpx;
	bottom: 50rpx;
	left: 0;
	right: 0;
	margin: auto;

}
.no_dis_text>.lock{
	display: inline-block;
	width: 30rpx;
	height: 30rpx;
	vertical-align: middle;
}
/* End签详情信息 */