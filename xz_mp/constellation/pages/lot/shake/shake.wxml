<!-- 导航 -->
<nav opts='{{navConf}}'></nav>
<!-- 登录 -->
<loginApp></loginApp>

<form>
    <view class="panel_scene">
        <!-- 内容主体 -->
        <view class="panel_body">
            <!-- start云 -->
            <view class="cloud_up"></view>
            <view class="cloud_left"></view>
            <view class="cloud_right"></view>
            <!-- End云 -->

            <!-- 草地 -->
            <image class="grass grass_2" src="/assets/img/grass_2.png"></image>
            <image class="grass grass_4" src="/assets/img/grass_4.png"></image>
            <!-- End草地 -->

            <!-- 树 -->
            <view class="tree_panel">
                <view class="tree_panel_container {{shakeLotSpeed ? 'animate':''}}" catchtap="drawLots">
                    <image class="tree" src="/assets/img/tree.png" mode="aspectFit"></image>
                    <!-- 签 -->
                    <image class="lot lot_1" src="/assets/img/lot_left.png" mode="aspectFit"></image>
                    <image class="lot lot_2" src="/assets/img/lot_center.png" mode="aspectFit"></image>
                    <image class="lot lot_3" src="/assets/img/lot_right.png" mode="aspectFit"></image>
                    <!-- End签 -->
                </view>
            </view>
            <view class="tree_panel">
                <view class="tree_panel_container" catchtap="drawLots">
                    <!-- End签 -->
                    <image class="people" src="/assets/img/people.png" mode="aspectFit"></image>
                    <!-- 爱心 -->
                    <image class="heart heart_left" src="/assets/img/heart_left.png" mode="aspectFit"></image>
                    <image class="heart heart_right" src="/assets/img/heart_right.png" mode="aspectFit"></image>
                    <!-- End爱心 -->
                </view>
            </view>
            <!-- End树 -->

            <!-- 草地 -->
            <image class="grass grass_3" src="/assets/img/grass_3.png"></image>
            <image class="grass grass_1" src="/assets/img/grass_1.png"></image>
            <!-- End草地 -->
        </view>
    </view>
</form>