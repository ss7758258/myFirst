<view class="UI_page page_brief bg3">
	<view class="UI_box">
		<image class='{{networkError?"noNet": "pic"}}' src="{{prevPic}}"   />
	</view>
	<view class="slogan" wx:if="{{!networkError}}">
		<image src="/assets/images/slogan2.png" mode="widthFix" />
	</view>
	<form bindsubmit="saveSelect" report-submit='true' wx:if="{{!networkError}}">
		<button class="save" form-type="submit" type='' hover-class="none">
			保存图片
		</button>
	</form>
</view>
<form bindsubmit="onclickHome" class='home' report-submit='true'>
	<button class='button1' form-type="submit" type='' hover-class="none">
		<image wx:if="{{isFromShare}}" src="/assets/images/icon_home.png" mode="widthFix" />
	</button>
</form>
<view wx:if="{{showCanvas}}">
	<canvas canvas-id="shareCanvas" style="width:375px;height:667px;z-index=-1"></canvas>
</view>