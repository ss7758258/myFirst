.mask{
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,.5);
  z-index:999;
  position: fixed;
  left: 0;
  top: 0;
}
.loading{
  max-width:70%;
  min-width: 250rpx;
  min-height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 20rpx; 
  background: rgba(0,0,0,.5);
  z-index: 9999;
  overflow: hidden;
}
.loading_img{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}
.loading_title{
  height: 60rpx;
  margin: 0 auto;
  line-height: 60rpx;
  font-size: 32rpx;
  text-align: center
}