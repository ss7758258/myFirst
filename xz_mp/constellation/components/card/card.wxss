.panel{
    position: fixed;
    top: 0;
    width: 100%;
    height:100%;
    background: rgba(0,0,0,.3);
    z-index: 99;
}
.card_panel{
    width: 92vw;
    margin:calc(4vw + 2.9962546816479403vh + 6.6vh) 4vw;
    height:82.45877061469265vh;
    background: #fff;
    color: #000;
}
.card_body_panel{
    height: 100%;
}
/* 图片类型广告位 */

.banner_img_panel>image{
    width: 100%;
    height: 100%;
}

/* 设置轮播banner */
swiper{
    height: 100%;
}
.swiper-item {
    width: 100%;
    height: 80vw;
}
.swiper-item > image{
    width: 100%;
    height: 100%;
}
.card_body_head{
    height: 6.666666666666667vw;
    width: 79.6vw;
    margin: 0 auto;
    display: flex;
    margin-top: 11.933333333333334vw;
}
.card_body_head_text{
    position: relative;
    width: 42vw;
    display: flex;
    overflow: hidden;
}
.card_body_head_text::after{
    content: '';
    position: absolute;
    display: block;
    bottom: 0;
    width: 0vw;
    height: 1vw;
    transition: all 1s ease-in;
    background-image: linear-gradient(-134deg, #3023AE 0%, #C86DD7 100%);
}
.card_body_head_text.show::after{
    width: 42vw;
}
.card_nickName{
    font-family: 'PingFangSC-Medium';
    font-size: 4.8vw;
    flex: 1;
    color: #9262FB;
    overflow: hidden;
    text-overflow:ellipsis;
    letter-spacing: -0.3546666666666667vw;
}
.card_body_head_text .card_body_score{
    font-family: 'PingFangSC-Medium';
    font-size: 2.4vw;
    line-height: 4.5vh;
    text-align: end;
    overflow: hidden;
    white-space: nowrap;
    color: #9262FB;
    letter-spacing: -0.17733333333333334vw;
}
.score{
    /* background: #000; */
    flex:0;
    display: flex;
    position: relative;
    overflow: hidden;
    transition: all .6s linear;
    transition-delay: .8s;
    height: 6.666666666666667vw;
}
.score.show{
    flex:1;
}
.score_rect{
    width: 2vw;
    height: 10vw;
    transform: rotate(25deg);
    background: #BF69D5;
    margin-left: 2vw;
    margin-top: -1vw;
}
.score_rect:first-child{
    margin-left: 1vw;
}
.score_transparent{
    background: #BF69D5;
    opacity: .5;
}

/* 内容区域 */
.card_content{
    width: 79.6vw;
    margin: 0 auto;
    margin-top: 3.3794666666666666vw;
    font-family: 'PingFangSC-Light';
    font-size: 4vw;
    color: #373737;
    letter-spacing: -0.29600000000000004vw;
    text-align: justify;
    line-height: 5.858666666666666vw;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
}