page .choice button {
	margin: 0;
	padding: 0;
	box-sizing: initial;
	overflow : initial;
	background: inherit;
	line-height : normal;
	border-radius: inherit;
	font-size: inherit;
}
.choice {
    position: fixed;
    left : -101%;
    width: 100%;
    min-height: calc(100% - 64px);
    height: calc(100% - 64px);
    transition: all .2s ease-in-out;
    z-index: 1;
}
.iPX .choice{
    min-height: calc(100% - 89px);
    height: calc(100% - 89px);
}
.choice.current{
    left : 0;
}
.choice-panel{
    position: relative;
    widows: 100%;
    height: 100%;
}
.choice-top{
    width: 100%;
    margin-left: 40rpx;
    font-size:40rpx;
    font-family:PingFangSC;
    font-weight:600;
    color:rgba(46,52,155,1);
    line-height:56rpx;
}
.choice-top>image{
    width: 280rpx;
    height: 100%;
    display: inline-block;
}
/* 底部背景 */
.bottom-bg{
    position: relative;
    width: 100%;
    height: 168rpx;
    bottom: 0;
    z-index: -1;
}
.flex-panel{
    flex: 1;
    width:100%;
}
.bottom-bg>image{
    width: 100%;
    height: 100%;
}
.bottom-bg>view{
    position: absolute;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    margin: auto; 
    text-align: center;
    width:100%;
    height:40rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular;
    color:rgba(146,98,251,1);
    letter-spacing: 10rpx;
}
.choice-star-monitor {
    width: 570rpx;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    text-align: center;
    justify-content:space-between;
    margin-top: 76rpx;
}
.star-xz-disc {
    display: inline-block;
    width: 108rpx;
    margin: 82rpx 122rpx 0 0;
}
.star-xz-disc:nth-child(3n){
    margin-right: 0;
}
.star-xz-disc:nth-child(-n + 3){
    margin-top: 0;
}
.disc-bottom {
    margin-top: 14rpx;
    text-align: center;
}

.disc-bottom>text {
    display: block;
    font-size:24rpx;
    font-family:'PingFangSC-Regular';
    color:rgba(102,102,102,1);
    line-height:34rpx;
}
.disc-bottom>.disc-text{
    font-size:26rpx;
    font-weight:400;
    color:rgba(128,128,166,1);
    line-height:36rpx;
}
.disc-top {
    position: relative;
    width: 108rpx;
    height: 108rpx;
    border-radius: 50%;
    /* background:currentColor; */
}
.disc-img{
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0rpx;
    margin: auto;
    width: 108rpx;
    height: 108rpx;
}

.bg{
    background: #FFFFFF;
}